<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/productsansbold"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/share_a_meal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:elevation="30dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameOfFood"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/productsans"
                    android:hint="@string/name_of_food" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/desc"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:elevation="30dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/descriptionOfFood"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:fontFamily="@font/productsans"
                    android:hint="@string/key_details" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/suggestions"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:elevation="30dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/suggestionsToGive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/productsans"
                    android:hint="@string/suggestions" />
            </com.google.android.material.textfield.TextInputLayout>
            <Spinner
                android:id="@+id/vegOrNon"
                android:layout_marginTop="30dp"
                android:elevation="30dp"
                android:gravity="center"
                android:entries="@array/choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>